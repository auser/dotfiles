#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "age"
     "bat"
     "btop"
     "curl"
     "eza"
     "fd"
     "ffmpeg"
     "fzf"
     "gdu"
     "gh"
     "git"
     "git-lfs"
     "gnu-units"
     "gnupg"
     "go"
     "golangci-lint"
     "jq"
     "mise"
     "openjdk"
     "pkg-config"
     "postgis"
     "ripgrep"
     "shellcheck"
     "tmux"
     "wget"
     "xz" -}}
{{ $casks := list
     "1password-cli"
     "balenaetcher"
     "battery"
     "hammerspoon"
     "transmission" -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
