HashKnownHosts no

{{- if eq .chezmoi.os "darwin" }}

Host *
  AddKeysToAgent yes
  UseKeychain yes
{{- end }}

Host github.com
  User git
  Hostname github.com
  PreferredAuthentications publickey
  IdentityFile /Users/auser/.ssh/id_ed25519

Host work
  HostName bitbucket.org
  AddKeysToAgent yes
  IdentityFile ~/.ssh/herring_id_ed25519
